<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckSimilarityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lostImageToCheckSimilarity"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/uploadimg"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/lostImageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lost Image Url" />

        <ImageView
            android:id="@+id/foundImageToCheckSimilarity"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/uploadimg"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/foundImageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Found Image Url" />
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/listViewFoundMobile"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
